
@{
    ViewBag.Title = "AddPicker";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<style>
    .card-body {
        padding: 0.25rem !important;
    }

    .nav {
        float: left;
        display: block;
    }

    tabs-left, .tabs-right {
        border-bottom: none;
        padding-top: 2px;
    }

    .tabs-left {
        width: 100%;
    }



        .tabs-left > li, .tabs-right > li {
            float: none;
            margin-bottom: 2px;
        }

        .tabs-left > li {
            padding: 5px 10px;
            background-color: #505b58;
            margin-right: -1px;
        }

    .tabs-right > li {
        margin-left: -1px;
    }

    .tabs-left > li.active > a,
    .tabs-left > li.active > a:hover,
    .tabs-left > li.active > a:focus {
        color: #fff;
        border-bottom-color: #ddd;
        border-right-color: transparent;
    }



    .tabs-left > li > a {
        color: #fff;
        border-radius: 4px 0 0 4px;
        margin-right: 0;
        display: block;
    }

    .tabs-right > li > a {
        border-radius: 0 4px 4px 0;
        margin-right: 0;
    }

    .card-header {
        background-color: #009688;
        padding: .75rem .75rem;
    }
    .pick {
        background-color: #505b58;
        padding:5px 10px;
        border-radius:5px;
    }
        .pick p, .pick span, .pick .form-check-input {
            color: #fff;
        }
    .btn-dark {
        background-color: #009688 !important;
        border-color: #009688 !important; 
    }
</style>
