
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<style>
    .highcharts-figure, .highcharts-data-table table {
        min-width: 320px;
        max-width: 800px;
        margin: 1em auto;
    }

    .highcharts-data-table table {
        font-family: Verdana, sans-serif;
        border-collapse: collapse;
        border: 1px solid #EBEBEB;
        margin: 10px auto;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .highcharts-data-table caption {
        padding: 1em 0;
        font-size: 1.2em;
        color: #555;
    }

    .highcharts-data-table th {
        font-weight: 600;
        padding: 0.5em;
    }

    .highcharts-data-table td, .highcharts-data-table th, .highcharts-data-table caption {
        padding: 0.5em;
    }

    .highcharts-data-table thead tr, .highcharts-data-table tr:nth-child(even) {
        background: #f8f8f8;
    }

    .highcharts-data-table tr:hover {
        background: #f1f7ff;
    }


    input[type="number"] {
        min-width: 50px;
    }
</style>


<div class="row" style="margin-top:45px;">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header" style="background-color:#009688">
                <h5 class="text-white">WIN RATE</h5>
            </div>
            <div class="card-body">
                <div id="container" style="width: 550px; height: 400px; margin: 0 auto"></div>

            </div>

        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header" style="background-color:#009688">
                <h5 class="text-white">TOP SPORTS</h5>
            </div>
            <div class="card-body">
                <div id="chartSPort" style="height: 300px; width: 100%;"></div>


            </div>
        </div>

    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header" style="background-color:#009688">
                <h5 class="text-white">PROFIT CHARTS</h5>
            </div>
            <div class="card-body">
                <div id="chartSPort" style="height: 300px; width: 100%;"></div>


            </div>
        </div>

    </div>
</div>

