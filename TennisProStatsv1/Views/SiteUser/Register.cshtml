@model TennisProStatsv1.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
    var successMessage = ViewBag.success;
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<div class="container-fluid fondo-registro">
    <h2>@ViewBag.Title.</h2>

    @if (successMessage == true)
    {
        <div style="display: none" id="show" class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5>Please check your inbox, we have sent you an confirmation e-mail</h5>
        </div>
    }

    @using (Html.BeginForm("Register", "SiteUser", FormMethod.Post, new { @class = "form-horizontal", role = "form", id="registerForm" }))
    {
        @Html.AntiForgeryToken()
        <h4>Cree una cuenta nueva.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label"> Fecha de nacimiento</label>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.DOB, new { @class = "form-control", id = "datepicker", onchange = "checkDate();" })
                <span style="color:red" id="DobError"></span>
                @*<input type="text" onchange="checkDate();" id="datepicker" class="form-control">*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="btnSubmit" class="btn btn-primary" value="Registrarse" />
            </div>
        </div>
    }
</div>
@section Scripts {

    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#show').show().fadeOut(20000);
        });

        $(function () {
            $("#datepicker").datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: '1930:2020',
            });
        });

        function checkDate() {
            debugger;
            var dateValue = $('#datepicker').val();
            date = dateValue.split("/");
            var DOBYear = parseInt(date[2]);

            var dateObject = new Date();
            var currentDateYear = dateObject.getFullYear();
            var dateDifference = currentDateYear - DOBYear;
            if (dateDifference) {
                if (dateDifference < 18) {
                    $('#btnSubmit').attr('disabled', true);
                    $('#DobError').html("Sorry you are below 18, we can't move forward!");
                    $('#datepicker').val('');
                    return true;
                }
                else {
                    $('#btnSubmit').attr('disabled', false);
                    $('#DobError').html("");

                    return false;
                }
            }
            
        }

        $('#registerForm').on('submit', function () {
            var isSmaller18Age = checkDate();
            if (isSmaller18Age) {
                return false;
            }
        });

    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
